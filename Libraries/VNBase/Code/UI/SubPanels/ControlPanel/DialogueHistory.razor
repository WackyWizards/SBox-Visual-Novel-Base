@using Sandbox;

@namespace VNBase.UI
@inherits SubPanel

@if ( !Player.IsValid() )
{
    return;
}

@* ReSharper disable CSharpWarnings::CS8974 *@
<root>
    <div class="header">
        <label class="title">History</label>
    </div>

    <div class="history">
        @foreach ( var dialogue in Player.DialogueHistory )
        {
                <div class="dialogue">
                    @if ( dialogue.Label.SpeakingCharacter.IsValid() )
                    {
                        <div class="character" style="color: @dialogue.Label.SpeakingCharacter.NameColor.Rgba">@( dialogue.Label.SpeakingCharacter.Name ):</div>
                    }
                    <div class="text">@(dialogue.Text)</div>
                </div>
        }
    </div>

    <div class="footer">
        <button icon="close" @onclick="@ToggleVisibility">Close</button>
    </div>
</root>
