@using Sandbox

@namespace VNBase.UI

@inherits SubPanel

@if ( !Player.IsValid() )
{
    return;
}

<root class="@( HasCharacters ? "" : "hidden" )">
    @foreach ( var character in Player.State.Characters )
    {
        <CharacterPortrait Character="@character" Player="@Player" Settings="@Settings" Hud="@Hud"/>
    }
</root>
